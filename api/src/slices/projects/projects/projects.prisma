model Project {
    id          String        @id @default(uuid())
    userId      String
    name        String
    clientName  String?
    description String?
    status      ProjectStatus @default(ACTIVE)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    user   User     @relation(fields: [userId], references: [id])
    access Access[]
}

enum ProjectStatus {
    ACTIVE
    ARCHIVED
}
